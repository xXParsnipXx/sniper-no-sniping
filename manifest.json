{
  "manifest_version": 2,
  "name": "Parsnip",
  "description": "Record macros",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Click Here"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/"
  ]
}